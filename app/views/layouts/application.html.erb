<!DOCTYPE html>
<%- klass = @start_page ? "start-page-background" : "" %>
<html class="<%= klass %>">

  <head>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href='http://fonts.googleapis.com/css?family=Londrina+Solid'>
    <title>Open Day at nugg.ad</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="<%= flash_class(name) %> fade in">
          <a href="#" data-dismiss="alert" class="close">Ã—</a>
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

    <div id="new_day_modal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div>

  </body>
</html>
