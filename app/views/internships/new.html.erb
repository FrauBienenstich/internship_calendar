  <%= form_for (@internship), url: {action: "create"} do  |f| %>

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Offer an Internship</h4>
    </div>

      <!-- <div class="form-group"> -->
      <div class="modal-body">
      
        <%= hidden_field_tag :day_id, @day.id %> 
        <%= text_area_tag :description, nil, placeholder: 'Description' %>
        <%= text_field_tag :email, nil, placeholder: 'Email' %>
        <%= text_field_tag :name, nil, placeholder: 'Name' %>

        <%= datetime_select :internship, :start_time, start_year: 2014, minute_step: 15, default: @day.date %>
        until
        <%= datetime_select :internship, :end_time, start_year: 2014, minute_step: 15, default: @day.date %>

      </div>


    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary">Offer internship</button>
    </div>
  <% end %>

