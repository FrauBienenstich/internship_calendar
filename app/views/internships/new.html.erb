<%= form_for (@internship) do  |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Offer an Internship</h4>
  </div>
  <div class="modal-body">
    <%= hidden_field_tag :slot_id, @slot.id %> 
    <%= text_area_tag :description, nil, placeholder: 'Description' %>
    <br/>
    <%= text_field_tag :email, nil, placeholder: 'Email' %>
    <br/>

    <%= text_field_tag :name, nil, placeholder: 'Name' %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Offer internship</button>
  </div>
<% end %>
