  <%= form_tag('/internships') do %>

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Offer an Internship</h4>
    </div>

      <!-- <div class="form-group"> -->
      <div class="modal-body">

        <%= hidden_field_tag :day_id, @day.id %> 

        <div class="form-group">
          <label for: :description> Description</label>
          <%= text_area_tag :description, nil, placeholder: 'Description', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <label for: :email> Email</label>
          <%= text_field_tag :email, nil, placeholder: 'Email', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <label for: :email> Name</label>
          <%= text_field_tag :name, nil, placeholder: 'Name', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= datetime_select :internship, :start_time, start_year: 2014, minute_step: 15, default: @day.date %>
        </div>
          until
        <div class="form-group">
          <%= datetime_select :internship, :end_time, start_year: 2014, minute_step: 15, default: @day.date %>
        </div>

      </div>


    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary">Offer internship</button>
    </div>
  <% end %>

