  <%= form_tag('/internships') do %>

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Offer an Internship</h4>
    </div>

      <!-- <div class="form-group"> -->
      <div class="modal-body">

        <%= hidden_field_tag :day_id, @day.id %> 

        <div class="form-group">
          <label for: :description> Description</label>
          <%= text_area_tag :description, nil, placeholder: 'Description', :class => 'form-control', required: true %>
        </div>
        <div class="form-group">
          <label for: :email> Email</label>
          <%= text_field_tag :email, nil, placeholder: 'Email', :class => 'form-control', required: true %>
        </div>
        <div class="form-group">
          <label for: :email> Name</label>
          <%= text_field_tag :name, nil, placeholder: 'Name', :class => 'form-control', required: true %>
        </div>

        <div class="form-group">
          <label for: :start_time> Start Time</label>
          <div class='input-group date' id='datetimepicker1' data-date-format="DD/MM/YYYY, HH:mm">
            <input type='text' class="form-control" name="internship[start_time]" />
            <span class="input-group-addon"><span class="fa fa-calendar"></span>
            </span>
          </div>
        </div>

        <div class="form-group">
          <label for: :end_time> End Time</label>
          <div class='input-group date' id='datetimepicker2' data-date-format="DD/MM/YYYY, HH:mm">
            <input type='text' class="form-control" name="internship[end_time]" />
            <span class="input-group-addon"><span class="fa fa-calendar"></span>
            </span>
          </div>
        </div>

          <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker({
                    defaultDate: moment("<%= @day.date.strftime('%-d/%-m/%Y 09:00') %>", "DD/MM/YYYY HH:mm"),
                    pickDate: false,
                    minuteStepping: 15,
                    icons: {
                      time: "fa fa-clock-o",
                      date: "fa fa-calendar",
                      up: "fa fa-arrow-up",
                      down: "fa fa-arrow-down"
                    }
                  });
                $('#datetimepicker2').datetimepicker({
                    defaultDate: moment("<%= @day.date.strftime('%-d/%-m/%Y 10:00')%>", "DD/MM/YYYY HH:mm"),
                    pickDate: false,
                    minuteStepping: 15,
                    icons: {
                      time: "fa fa-clock-o",
                      date: "fa fa-calendar",
                      up: "fa fa-arrow-up",
                      down: "fa fa-arrow-down"
                    }
                  });
                $("#datetimepicker1").on("dp.change",function (e) {
                  var startPicker = $('#datetimepicker1').data("DateTimePicker");
                  var endPicker = $('#datetimepicker2').data("DateTimePicker");
                  startDate = e.date;
                  endDate = endPicker.getDate();
                  if (endDate < startDate) {
                    endPicker.setDate(startDate);
                  }
                });
                $("#datetimepicker2").on("dp.change",function (e) {
                  var startPicker = $('#datetimepicker1').data("DateTimePicker");
                  var endPicker = $('#datetimepicker2').data("DateTimePicker");
                  startDate = startPicker.getDate();
                  endDate = e.date;
                  if (startDate > endDate) {
                    startPicker.setDate(endDate);
                  }
                });
            });
          </script>
        </div>
        
      </div>


    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary">Offer internship</button>
    </div>
  <% end %>

