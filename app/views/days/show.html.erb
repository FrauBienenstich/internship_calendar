              <%= internship.host.email %>
              <%= internship.host.name %>

              <br>
              <br>
            <% end %>
            </li>

            <li>
            <%= form_tag(controller: "internships", action: "create",method: "post") do %>
              <%= hidden_field_tag :slot_id, slot.id %>

              <%= label_tag :description %>
              <%= text_area_tag :description %>

              <%= label_tag :email %>
              <%= text_field_tag :email %>

              <%= label_tag :name %>
              <%= text_field_tag :name %> 
              

              <%= submit_tag("Offer Internship") %>
            <% end %>
            </li>
          </ul>
        </td>





      </tr>
    <% end %>
  </tbody>  
</table>