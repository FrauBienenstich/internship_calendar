<h1>
  <%= @day.date %>
</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Time</th>
      <th colspan="2">Host</th>
      <th>Intern</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <%- @day.slots.each do |slot| %>
      <tr>
        <td><%= slot.name %></td>

